
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}

@model WareHouseNTierProject.UI.Areas.Admin.Models.DTO.SupplierDTO

<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-home"></i> Home</a></li>
        <li class="active">Update Supplier</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-8">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Update Supplier</h3>
                </div>
                <form action="/Admin/Supplier/Update" method="post" role="form" enctype="multipart/form-data">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="text">Company Name</label>
                            <input type="text" name="CompanyName" value="@Model.CompanyName" class="form-control" placeholder="Company Name">
                        </div>
                        <div class="form-group">
                            <label for="text">Contact Name</label>
                            <input type="text" name="ContactName" value="@Model.ContactName" class="form-control" placeholder="Contact Name">
                        </div>
                        <div class="form-group">
                            <label for="text">Phone Number</label>
                            <input type="text" name="PhoneNumber" value="@Model.PhoneNumber" class="form-control" placeholder="Phone Number">
                        </div>
                        <div class="form-group">
                            <label for="text">Fax Number</label>
                            <input type="text" name="FaxNumber" value="@Model.FaxNumber" class="form-control" placeholder="Fax Number">
                        </div>
                        <div class="form-group">
                            <label for="text">Postal Code</label>
                            <input type="text" name="PostalCode" value="@Model.PostalCode" class="form-control" placeholder="Postal Code">
                        </div>
                        <div class="form-group">
                            <label for="text">Country</label>
                            <input type="text" name="Country" value="@Model.Country" class="form-control" placeholder="Country">
                        </div>
                        <div class="form-group">
                            <label for="text">City</label>
                            <input type="text" name="City" value="@Model.City" class="form-control" placeholder="City">
                        </div>
                        <div class="form-group">
                            <label for="text">Address</label>
                            <input type="text" name="Address" value="@Model.Address" class="form-control" placeholder="Address">
                        </div>
                    </div>
                    <input type="text" style="visibility:hidden" name="ID" value="@Model.ID" />
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

